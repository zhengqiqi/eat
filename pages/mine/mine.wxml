<!--mine.wxml-->
<view>
  <view>
    <view class="user username viewbackground">
        <image class="userimage" mode="aspectFill" src="{{userInfo.avatarUrl}}"></image>
        <text>{{userInfo.nickName}}</text>
    </view>
    <view class="user">
        <view class="userinfoline">
            <view class="userinfoeach">
                <view class="userinfo viewbackground">
                    <navigator url="../../pages/setAge/setAge">
                      <view>点击我跳转到下一个页面</view>
                    </navigator>
                </view>
            </view>
            <view class="userinfoeach">
                <view class="userinfo viewbackground">1</view>
            </view>
            <view class="userinfoeach">
                <view class="userinfo viewbackground">1</view>
            </view>
            <view class="userinfoeach">
                <view class="userinfo viewbackground">
                    <picker bindchange="bindPickerChange" value="{{indexsex}}" range="{{array}}">
                        <view>
                          {{array[index]}}
                        </view>
                        <view>性别</view>
                    </picker>
                </view>
            </view>
            <view class="userinfoeach">
                <view class="userinfo viewbackground">
                    <picker bindchange="bindPickerChange" value="{{index}}" range="{{arrayrate}}">
                        <view>
                          {{array[index]}}
                        </view>
                        <view>运动频率</view>
                    </picker>
                </view>
            </view>
            <view class="userinfoeach">
                <view class="userinfo viewbackground">1</view>
            </view>
        </view>
    </view>

    <view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}">1</view>
    <view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">2</view>

  </view>
</view>