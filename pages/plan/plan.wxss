/**plan.wxss**/
.calendar{
  background: #8bc34a;
  width: 100%;
  height: 75px;
}

.planList{
  width: 100%;
}

.planListeach{
  background: #ffffff;
  margin-top: 8px;
}

.planListhead{
  height: 36px;
}

.headpng{
  width: 30px;
  height:30px;
  margin-left: 10px;
  margin-top: 3px;
  float: left;
}

.headname{
  font-size: 16px;
  float: left;
  color: #707070;
  margin-left: 8px;
  margin-top: 8px;
}

.headcal{
  font-size: 13px;
  float: right;
  color: #707070;
  margin-right: 10px;
  margin-top: 10px;
}

.planListContent{
  vertical-align: middle;
  margin-left: 8px;
  margin-right: 8px;
}

.listeach{
  height: 80px;
  width: 100%;
  border-top: 1px solid #bbbbbb;
}

.listpng{
  height: 60px;
  width: 90px;
  margin-top: 8px;
  float: left;
}

.listfont{
  height: 60px;
  width: 180px;
  margin-top: 8px;
  margin-left: 8px;
  float: left;
}

.listfontname{
  line-height: 30px;
  width: 100%;
}

.listfontstuff{
  line-height: 30px;
  width: 100%;
  font-size: 12px;
  color: #8c878c;
}

.listcal{
  font-size: 13px;
  float: right;
  color: #707070;
  margin-right: 2px;
  margin-top: 10px;
}

.view_show{
  display: block;
}

.view_hide{
 display: none;
}